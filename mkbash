#!/bin/bash

#info#
tput smso;
echo "  __  __   _  __  ____       _      ____    _   _ ";
echo " |  \/  | | |/ / | __ )     / \    / ___|  | | | |";
echo " | |\/| | | ' /  |  _ \    / _ \   \___ \  | |_| |";
echo " | |  | | | . \  | |_) |  / ___ \   ___) | |  _  |";
echo " |_|  |_| |_|\_\ |____/  /_/   \_\ |____/  |_| |_|";
echo "                                                  ";
tput rmso;
echo "-This script simplifies making commands for executing scripts-"
echo "Code by Inbell1s"
echo
echo

## Check for sbash command and create if missing ##
while true; do
        if [ -f /bin/sbash ]
                then
                break
        else
echo '#!/bin/bash
##mkbcf##
tput smso;
list=$(basename -a $(grep -rwlh "##mkbcf##" /bin))
echo List of all mkbash commands:
echo
tput rmso
basename -a $(grep -rwlh "##mkbcf##" /bin)
echo
exit

' > /bin/sbash
chmod +x /bin/sbash
 fi
done

## Check for logfile and create if missing ##

while true; do
	if [ -f /var/log/mkbash.log ]
 		then
  		break
	else
  		 > /var/log/mkbash.log
	tput smso;
		echo "Log created."
	tput rmso;
	echo
 fi
done

##Functions##

tput smso;
echo "Options:"
PS3='
What would you like to do?:'
options=("Create" "Edit" "Remove" "List" "Show command" "Update" "Quit")
tput rmso;
select opt in "${options[@]}"
do
    case $opt in
        "Create")
		tput smso;
		echo "Command Creation"
		echo
		echo "Specify the desired command name, full command of script and prefix if needed"
		tput rmso;
		echo
		echo "Command name:"
		read -r Name
			while true; do
			 if [ "$Name" = "" ]
			  then
			   tput smso;
    			   echo "No name given!"
			   tput rmso;
			   echo
			   echo "Please set the command name:"
		   	   read -r Name
			  else
			   break
			 fi
			done
		echo
		echo "Full script command:"
		read -r Command
			while true; do
                         if [ "$Command" = "" ]
                          then
                           tput smso;
                           echo "No command given!"
                           tput rmso;
                           echo
                           echo "Please set the command:"
                           read -r Command
                          else
                           break
                         fi
                        done

		echo
		echo "Prefix (if desired):"
		read -r Prefix
	
#Input validation#

while true; do
	if command -v $Name >/dev/null 2>&1
 		then
  		tput smso;
  		echo "Command already exists, please use another name."
  		tput rmso;
  		echo "New command name:"
  		read -r Name
	else
  		break
	fi
done

while true; do
if command -v $Command >/dev/null 2>&1
 then
  break
 else
  tput smso;
  echo "Script does not exist, please check your path."
  tput rmso;
  echo "New script command:"
  read -r Command
fi
done

#Create command file#

echo '#!/bin/bash
##mkbcf##
'$Prefix' '$Command' "$@"' > /bin/"$Name"

chmod +x /bin/"$Name"

#Add command to log file #

echo "'$Name' - '$Prefix' '$Command'" >> /var/log/mkbash.log

tput smso;

#Finishing#

echo
echo
echo 'Creation complete, testing the command using "'"$Name"'"'

tput rmso;

sleep 4

"$Name"
            ;;
        "Edit")
		tput smso;
		echo "Edit existing command, please specify old name and new name:"
		tput rmso;
		echo
                echo "Old command name:"
                read -r oldname
			while true; do
			 if [ "$oldname" = "" ]
			  then
			   tput smso;
    			   echo "No name given!"
			   tput rmso;
			   echo
			   echo "Please set the old command name:"
		   	   read -r oldname
			  else
			   break
			 fi
			done
                echo
                echo "New command name:"
                read -r newname
			while true; do
			 if [ "$newname" = "" ]
			  then
			   tput smso;
    			   echo "No name given!"
			   tput rmso;
			   echo
			   echo "Please set the new command name:"
		   	   read -r Name
			  else
			   break
			 fi
			done
while true; do
	if command -v $newname >/dev/null 2>&1
 		then
  		tput smso;
  		echo "Command already exists, please use another name."
  		tput rmso;
  		echo "New command name:"
  		read -r newname
	else
  		break
	fi
done
      while true; do
     if grep -q "##mkbcf##" /bin/$oldname > /dev/null 
                then
		mv /bin/"$oldname" /bin/"$newname"
                tput smso;
                echo "Command changed from "$oldname" to "$newname"."
                tput rmso;
		sed -i "s/'$oldname'/'$newname'/g" /var/log/mkbash.log
                sleep 5
		exit
        else
                tput smso;
		echo "Command does not exist/is not a mkbash command, please use a valid command."
		tput rmso
		basename -a $(grep -qrwlh "##mkbcf##" /bin)
		echo
		echo "Old command:"
		read -r oldname
        fi
done

            ;;


        "Remove")
	tput smso;
            echo "Remove existing command."
	    echo
        tput rmso;	
	    echo "Name of the command you wish to delete:"
	    read -r delete
		while true; do
			 if [ "$delete" = "" ]
			  then
			   tput smso;
    			   echo "No name given!"
			   tput rmso;
			   echo
			   echo "Please specify the command name to delete:"
		   	   read -r delete
			  else
			   break
			 fi
			done
	
while true; do
      if grep -q "##mkbcf##" /bin/$delete > /dev/null 
                then
                rm /bin/"$delete"
                tput smso;
                echo "Command "$delete" removed."
                tput rmso;
                sed -i "s/'$delete'/'$delete' (Removed)/g" /var/log/mkbash.log
                sleep 5
                exit
else
                tput smso;
                echo "Command does not exist/is not a mkbash command, please use a valid command."
                tput rmso
                basename -a $(grep -rwlh "##mkbcf##" /bin)
                echo
                echo "Command you wish to delete:"
                read -r delete

fi
done
            ;;
"List")
        tput smso;
            echo "List of all created commands:"
            echo
        tput rmso;      
            basename -a $(grep -rwlh "##mkbcf##" /bin)
            echo
            ;;
            
            "Show command")
            tput smso;
            echo "Choose the command you want to show:"
            tput rmso;
            echo
            basename -a $(grep -rwlh "##mkbcf##" /bin)
            echo
            echo "Command name:"
            read -r show
			while true; do
			 if [ "$show" = "" ]
			  then
			   tput smso;
    			   echo "No name given!"
			   tput rmso;
			   echo
			   echo "Please specify the command name to show:"
		   	   read -r show
			  else
			   break
			 fi
			done
            echo
            echo
 while true; do
        if grep -q "##mkbcf##" /bin/$show > /dev/null 
	  then
            cat /bin/$show
	exit
else
                tput smso;
                echo "Command does not exist/is not a mkbash command, please use a valid command."
                tput rmso
echo
echo "Available commands:"
                basename -a $(grep -rwlh "##mkbcf##" /bin)
                echo
                echo "Command you wish to show:"
                read -r show

fi
done
            ;;
            
	"Update")
		wget https://raw.githubusercontent.com/Inbell1s/mkbash/master/mkbash -q -O /bin/mkbash 
		tput smso;
		echo "You are now up to date!"
		tput rmso;
	   ;;
        
	"Quit")
            exit
            ;;
        *) echo "invalid option $REPLY";;
    esac
done
 
