#!/bin/sh
tput setaf 2;
tput smso;
echo "##FAST BASH COMMAND CREATER##"
echo
echo "-This script simplifies making commands for executing scripts-"
echo "Code by Inbell1s"
tput rmso;
tput bold;
echo "'Name' This is what you want to name your command."
echo "'Prefix' The software for running your script e.g 'python2'. Leave empty if none needed."
echo "'Command' This is the path to your script."
echo "Use the full path e.g:"
echo "'~/script/run/start.py'"
echo
tput sgr0;
echo
echo "Create command or list created commands?"
echo "create(default)/list:"
read option
while true; do
if [ $option = "list" ]
 then
  cat /bin/mkblog
  exit
 else

#Variable Input#

echo "Name:"
read Name
echo
echo "Prefix:"
read Prefix
echo
echo "Command:"
read Command
echo

#Input validation#

while true; do
if [ -f /bin/"$Name" ]
 then
  tput smso;
  echo "Command already exists, please use another name."
  tput rmso;
  echo "New command name:"
  read Name
 else
  break
fi
done
cd
while true; do
if [ -f "$Command" ]
 then
  break
 else
  tput smso;
  echo "Script file does not exist, please check your path."
  tput rmso;
  echo "New script path:"
  read Command
fi
done

#Create command file#

echo '#!/bin/bash

'$Prefix' '$Command' "$@"' > /bin/"$Name"

chmod +x /bin/"$Name"

#Add command to log file #

echo "'$Name' - '$Prefix' '$Command'" >> /bin/mkblog

tput setaf 2;
tput bold;

#Finishing#

echo
echo
echo 'Creation complete, testing the command using "'"$Name"'"'

tput sgr0;

sleep 4

"$Name"

fi
done
